<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".GestionCastigosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40sp"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:backgroundTint="@color/surface"
            android:text="☰"
            android:textColor="@color/primary"
            android:textSize="24sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Gestionar Castigos"
            android:textColor="@color/success"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/divider"
        android:layout_marginStart="90sp"
        android:layout_marginEnd="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/etCastigoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_input"
            android:hint="Descripción del castigo (Ej: 50 flexiones)"
            android:inputType="textCapSentences"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <Button
            android:id="@+id/btnAnadirCastigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Añadir Castigo"
            android:backgroundTint="@color/achievement"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Castigos Guardados"
        android:textColor="@color/acent"
        android:textSize="18sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCastigos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_castigo" />

</LinearLayout>