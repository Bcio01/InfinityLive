<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <include
        android:id="@+id/layoutMenuInferior"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutMenuInferior"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:textColor="@color/text_primary"/>

        <TextView
            android:id="@+id/tvHeaderSolicitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitudes Pendientes"
            android:paddingStart="16dp"
            android:textColor="@color/warning"
            android:textStyle="bold"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSolicitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tus Amigos"
            android:paddingStart="16dp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAmigos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarAmigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutMenuInferior"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/addicon"
        app:backgroundTint="@color/acent"
        app:tint="@android:color/white"
        android:contentDescription="Agregar amigo"/>

</RelativeLayout>