<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/fabDiamondContainer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/achievement"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/fabIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/addicon"
            android:rotation="-45"
            app:tint="@color/text_primary" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/bottomBarBg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/surface"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="@id/bottomBarBg"
        app:layout_constraintTop_toTopOf="@id/bottomBarBg">

        <LinearLayout
            android:id="@+id/menuHabitos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iconHabitos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iniciounselecticon"
                app:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textHabitos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="-6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuDiarias"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iconDiarias"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/rutinasunselectedicon"
                app:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textDiarias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutinas"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="-6dp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/menuPendientes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iconPendientes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/iconsocialunselected"
                app:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textPendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="-6dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuRecompensas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iconRecompensas"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tiendaunselecticon"
                app:tint="@color/text_secondary"/>

            <TextView
                android:id="@+id/textRecompensas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tienda"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="-6dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>