<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Tus Áreas Clave"
            android:textColor="@color/acent"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider"
            android:backgroundTint="@color/divider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="Selecciona las áreas que deseas mejorar (mínimo 3)."
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArea1"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Estudio"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeColor="@color/selector_boton_borde"
                app:backgroundTint="@color/surface"
                android:textColor="@color/selector_boton_texto"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArea2"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Familia"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeColor="@color/selector_boton_borde"
                app:backgroundTint="@color/surface"
                android:textColor="@color/selector_boton_texto"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArea3"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Salud"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeColor="@color/selector_boton_borde"
                app:backgroundTint="@color/surface"
                android:textColor="@color/selector_boton_texto"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArea4"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Finanzas"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeColor="@color/selector_boton_borde"
                app:backgroundTint="@color/surface"
                android:textColor="@color/selector_boton_texto"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArea5"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Relaciones"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeColor="@color/selector_boton_borde"
                app:backgroundTint="@color/surface"
                android:textColor="@color/selector_boton_texto"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArea6"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Trabajo"
                android:checkable="true"
                app:cornerRadius="12dp"
                app:strokeColor="@color/selector_boton_borde"
                app:backgroundTint="@color/surface"
                android:textColor="@color/selector_boton_texto"/>

        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/btnConfirmarAreas"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Continuar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            app:cornerRadius="30dp"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="2dp"
            android:backgroundTint="@color/divider"
            android:textColor="@color/success"/>

    </LinearLayout>
</ScrollView>