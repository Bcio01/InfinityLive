<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Contenido principal de la app -->

    <!-- Panel lateral (el menú en sí) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40sp"
            android:paddingStart="20sp"
            android:paddingEnd="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Toolbar o botón para abrir el menú -->
                <Button
                    android:id="@+id/btnMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/surface"
                    android:text="☰"
                    android:textColor="@color/primary"/>

                <!-- Aquí va el contenido de tu pantalla -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:text="Area 3"
                    android:textColor="@color/success"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/divider"
                    android:layout_marginStart="90sp"
                    android:layout_marginEnd="20sp"/>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <!-- Menu -->
    <!-- Menu lateral con scroll -->
    <ScrollView
        android:id="@+id/sideMenuScroll"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/surface"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/sideMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Parte superior: usuario -->
            <LinearLayout
                android:id="@+id/userMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/usericon"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="Icono de Usuario"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario"
                    android:textColor="@color/acent"
                    android:textSize="20sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider"/>

            <!-- Inicio -->

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="16sp"
                android:drawableStart="@drawable/homeicon"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/success" /> -->

            <LinearLayout
                android:id="@+id/inicioMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/homeicon"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Icono de Home"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>


            <!-- Áreas -->
            <LinearLayout
                android:id="@+id/areasMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/listicon"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Icono de Lista"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Áreas Clave"
                    android:textColor="@color/success"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Submenú -->
            <LinearLayout
                android:id="@+id/subMenuAreas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="50dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/area1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área 1"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/area2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área 2"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/area3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área 3"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/success" />

                <TextView
                    android:id="@+id/area4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área 4"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/area5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Área 5"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Tienda -->
            <LinearLayout
                android:id="@+id/tiendaMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/storeicon"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Icono de Tienda"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tienda"
                    android:textSize="16sp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Empuja el logout hacia abajo -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Divider inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/divider"/>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/logoutMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logouticon"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Icono de Logout"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cerrar Sesión"
                    android:textColor="@color/warning"
                    android:textSize="18sp"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
