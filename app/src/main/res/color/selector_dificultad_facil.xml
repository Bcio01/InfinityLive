<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado Seleccionado (Checked) -> Color Verde (Success) -->
    <item android:color="@color/success" android:state_checked="true"/>

    <!-- Estado Presionado -> Color Verde con transparencia (opcional) -->
    <item android:color="@color/success" android:state_pressed="true"/>

    <!-- Estado Por Defecto (Sin seleccionar) -> Color Gris Texto Secundario -->
    <item android:color="@color/text_secondary"/>
</selector>